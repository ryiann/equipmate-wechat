/* =========================================
   EquipMate 全局样式
   还原 TailwindCSS 设计系统
   ========================================= */

/* CSS 变量 */
page {
  --color-primary: #2563EB;
  --color-primary-light: #3b82f6;
  --color-primary-50: #eff6ff;
  --color-primary-100: #dbeafe;
  --color-success: #059669;
  --color-success-50: #ecfdf5;
  --color-success-600: #059669;
  --color-warning: #ea580c;
  --color-warning-50: #fff7ed;
  --color-danger: #dc2626;
  --color-danger-50: #fef2f2;
  --color-purple: #9333ea;
  --color-purple-50: #faf5ff;
  --color-wechat: #07C160;

  --color-bg: #f9fafb;
  --color-bg-white: #ffffff;
  --color-border: #f3f4f6;
  --color-border-light: #f9fafb;

  --color-text-primary: #111827;
  --color-text-secondary: #6b7280;
  --color-text-placeholder: #9ca3af;
  --color-text-light: #d1d5db;

  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  --radius-full: 9999rpx;

  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  --shadow-md: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);

  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
  font-size: 28rpx;
  color: var(--color-text-primary);
  background-color: var(--color-bg);
  box-sizing: border-box;
}

/* 重置 */
view, text, image, input, button, scroll-view, swiper, navigator {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

button {
  padding: 0;
  margin: 0;
  background: none;
  border: none;
  line-height: inherit;
  font-size: inherit;
}

button::after {
  border: none;
}

/* ============= 公共工具类 ============= */

/* 文字 */
.text-xs { font-size: 20rpx; }
.text-sm { font-size: 24rpx; }
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 44rpx; }

.font-medium { font-weight: 500; }
.font-semibold { font-weight: 600; }
.font-bold { font-weight: 700; }

.text-primary { color: var(--color-primary); }
.text-secondary { color: var(--color-text-secondary); }
.text-placeholder { color: var(--color-text-placeholder); }
.text-white { color: #ffffff; }
.text-danger { color: var(--color-danger); }

.text-center { text-align: center; }
.text-left { text-align: left; }

.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.line-clamp-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.font-mono {
  font-family: 'SF Mono', 'Menlo', 'Monaco', 'Courier New', monospace;
}

/* Flex 布局 */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.flex-row { flex-direction: row; }
.flex-wrap { flex-wrap: wrap; }
.flex-1 { flex: 1; }
.items-center { align-items: center; }
.items-start { align-items: flex-start; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.justify-around { justify-content: space-around; }

.gap-1 { gap: 8rpx; }
.gap-2 { gap: 16rpx; }
.gap-3 { gap: 24rpx; }
.gap-4 { gap: 32rpx; }

/* 间距 */
.p-2 { padding: 16rpx; }
.p-3 { padding: 24rpx; }
.p-4 { padding: 32rpx; }
.p-6 { padding: 48rpx; }
.p-8 { padding: 64rpx; }

.px-2 { padding-left: 16rpx; padding-right: 16rpx; }
.px-4 { padding-left: 32rpx; padding-right: 32rpx; }
.px-6 { padding-left: 48rpx; padding-right: 48rpx; }

.py-1 { padding-top: 8rpx; padding-bottom: 8rpx; }
.py-2 { padding-top: 16rpx; padding-bottom: 16rpx; }
.py-3 { padding-top: 24rpx; padding-bottom: 24rpx; }
.py-4 { padding-top: 32rpx; padding-bottom: 32rpx; }
.py-8 { padding-top: 64rpx; padding-bottom: 64rpx; }

.mt-1 { margin-top: 8rpx; }
.mt-2 { margin-top: 16rpx; }
.mt-4 { margin-top: 32rpx; }
.mt-6 { margin-top: 48rpx; }
.mt-8 { margin-top: 64rpx; }
.mt-10 { margin-top: 80rpx; }

.mb-1 { margin-bottom: 8rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mb-3 { margin-bottom: 24rpx; }
.mb-4 { margin-bottom: 32rpx; }
.mb-6 { margin-bottom: 48rpx; }

.ml-1 { margin-left: 8rpx; }
.ml-2 { margin-left: 16rpx; }
.mr-1 { margin-right: 8rpx; }

/* 宽高 */
.w-full { width: 100%; }
.min-h-screen { min-height: 100vh; }

/* 圆角 */
.rounded-md { border-radius: var(--radius-sm); }
.rounded-lg { border-radius: var(--radius-md); }
.rounded-xl { border-radius: var(--radius-lg); }
.rounded-2xl { border-radius: var(--radius-xl); }
.rounded-full { border-radius: var(--radius-full); }

/* 阴影 & 边框 */
.shadow-sm { box-shadow: var(--shadow-sm); }
.shadow-md { box-shadow: var(--shadow-md); }

.border-bottom {
  border-bottom: 1rpx solid var(--color-border);
}

/* 背景 */
.bg-white { background-color: var(--color-bg-white); }
.bg-gray { background-color: var(--color-bg); }

/* 卡片 */
.card {
  background: var(--color-bg-white);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--color-border);
}

/* 状态标签 */
.tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: var(--radius-sm);
  font-size: 20rpx;
  font-weight: 700;
}

.tag-red {
  background: var(--color-danger-50);
  color: var(--color-danger);
}

.tag-orange {
  background: var(--color-warning-50);
  color: var(--color-warning);
}

.tag-blue {
  background: var(--color-primary-50);
  color: var(--color-primary);
}

.tag-green {
  background: var(--color-success-50);
  color: var(--color-success-600);
}

.tag-gray {
  background: #f9fafb;
  color: var(--color-text-secondary);
}

/* 设备状态标签 (带边框) */
.status-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  font-weight: 500;
  border: 1rpx solid;
}

.status-in-use {
  background: var(--color-success-50);
  color: var(--color-success-600);
  border-color: #a7f3d0;
}

.status-maintenance {
  background: var(--color-warning-50);
  color: var(--color-warning);
  border-color: #fed7aa;
}

.status-idle {
  background: #f9fafb;
  color: var(--color-text-secondary);
  border-color: #e5e7eb;
}

.status-scrapped {
  background: var(--color-danger-50);
  color: var(--color-danger);
  border-color: #fecaca;
}

/* 按钮 */
.btn-primary {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 32rpx;
  background: var(--color-primary);
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 500;
  border-radius: var(--radius-full);
}

.btn-success {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 32rpx;
  background: var(--color-success);
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 500;
  border-radius: var(--radius-full);
}

.btn-outline {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 32rpx;
  background: #f3f4f6;
  color: #374151;
  font-size: 24rpx;
  font-weight: 500;
  border-radius: var(--radius-full);
  border: 1rpx solid #e5e7eb;
}

.btn-block {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  font-weight: 600;
}

.btn-wechat {
  background: var(--color-wechat);
  color: #ffffff;
}

.btn-danger-outline {
  background: var(--color-bg-white);
  color: var(--color-danger);
  border: 1rpx solid var(--color-border);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
}

/* 图标通用 */
.icon-sm {
  width: 28rpx;
  height: 28rpx;
}

.icon-md {
  width: 40rpx;
  height: 40rpx;
}

.icon-lg {
  width: 48rpx;
  height: 48rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: var(--color-text-secondary);
  font-size: 28rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
