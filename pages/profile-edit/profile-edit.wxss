/* pages/profile-edit/profile-edit.wxss */
.page-form { min-height: 100vh; background: var(--color-bg); padding: 24rpx; padding-bottom: 160rpx; }
.form-card { padding: 16rpx 28rpx; }
.form-item { display: flex; align-items: center; padding: 24rpx 0; border-bottom: 1rpx solid var(--color-border-light); }
.form-item:last-child { border-bottom: none; }
.form-label { font-size: 28rpx; color: #374151; width: 160rpx; flex-shrink: 0; }
.form-input { flex: 1; padding: 8rpx 0; font-size: 28rpx; color: var(--color-text-primary); text-align: right; }

.avatar-row { justify-content: space-between; }
.avatar-edit { display: flex; align-items: center; gap: 16rpx; }
.avatar-preview { width: 80rpx; height: 80rpx; border-radius: 50%; background: #e5e7eb; }
.picker-arrow { width: 28rpx; height: 28rpx; }

.submit-wrap { position: fixed; bottom: 0; left: 0; right: 0; padding: 24rpx 32rpx; background: #fff; border-top: 1rpx solid var(--color-border); padding-bottom: calc(24rpx + env(safe-area-inset-bottom)); }
.submit-btn { display: flex; width: 100%; justify-content: center; padding: 24rpx 0; background: var(--color-primary); color: #fff; font-size: 30rpx; font-weight: 600; border-radius: 20rpx; }
