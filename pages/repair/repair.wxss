/* pages/repair/repair.wxss */

.page-repair {
  min-height: 100vh;
  background: var(--color-bg);
  padding-bottom: 40rpx;
}

/* Tab 头部 */
.repair-header {
  background: #ffffff;
  position: sticky;
  top: 0;
  z-index: 20;
  box-shadow: var(--shadow-sm);
}

.repair-tabs {
  display: flex;
  border-bottom: 1rpx solid var(--color-border);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  font-size: 26rpx;
  font-weight: 500;
  color: var(--color-text-secondary);
  position: relative;
}

.tab-item.active {
  color: var(--color-primary);
}

.tab-label {
  font-size: inherit;
  color: inherit;
}

.tab-count {
  margin-left: 8rpx;
  background: #f3f4f6;
  color: var(--color-text-secondary);
  padding: 2rpx 12rpx;
  border-radius: var(--radius-full);
  font-size: 20rpx;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 64rpx;
  height: 6rpx;
  background: var(--color-primary);
  border-radius: 6rpx 6rpx 0 0;
}

/* 工单列表 */
.repair-list {
  padding: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.repair-card {
  overflow: hidden;
  padding: 0;
}

.repair-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 28rpx;
  border-bottom: 1rpx solid var(--color-border-light);
  background: rgba(249, 250, 251, 0.5);
}

.order-no {
  font-size: 22rpx;
  color: var(--color-text-secondary);
}

.order-time {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: var(--color-text-placeholder);
}

.order-time .icon-xs {
  margin-right: 6rpx;
}

.repair-card-body {
  padding: 24rpx 28rpx;
}

.repair-card-title-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.repair-eq-name {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--color-text-primary);
}

.repair-desc {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-bottom: 24rpx;
  line-height: 1.6;
}

.repair-card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.repair-person {
  font-size: 22rpx;
  color: var(--color-text-secondary);
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 200rpx;
  width: 100rpx;
  height: 100rpx;
  background: var(--color-primary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.4);
  z-index: 100;
}

.fab-icon {
  width: 44rpx;
  height: 44rpx;
}
