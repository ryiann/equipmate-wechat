/* pages/home/home.wxss */

.page-home {
  padding-bottom: 40rpx;
  min-height: 100vh;
  background: var(--color-bg);
}

/* ===== 蓝色弧形头部 ===== */
.header {
  background: var(--color-primary);
  padding: 96rpx 48rpx 48rpx;
  border-radius: 0 0 40rpx 40rpx;
  color: #ffffff;
}

.header-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-info {
  display: flex;
  flex-direction: column;
}

.header-title {
  font-size: 44rpx;
  font-weight: 700;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(219, 234, 254, 1);
  margin-top: 8rpx;
}

.header-bell {
  width: 96rpx;
  height: 96rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.icon-bell {
  width: 48rpx;
  height: 48rpx;
}

.badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #ef4444;
  border-radius: 16rpx;
  font-size: 18rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

/* 统计卡片 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-top: 48rpx;
}

.stat-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 24rpx;
  backdrop-filter: blur(10px);
  display: flex;
  flex-direction: column;
}

.stat-label {
  font-size: 20rpx;
  color: rgba(219, 234, 254, 1);
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 600;
}

/* ===== 快捷操作 ===== */
.quick-actions-wrapper {
  padding: 0 32rpx;
  margin-top: -32rpx;
  position: relative;
  z-index: 10;
}

.quick-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  padding: 24rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.action-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon.bg-blue { background: var(--color-primary-50); }
.action-icon.bg-orange { background: var(--color-warning-50); }
.action-icon.bg-green { background: var(--color-success-50); }
.action-icon.bg-purple { background: var(--color-purple-50); }

.action-label {
  font-size: 20rpx;
  color: var(--color-text-secondary);
  font-weight: 500;
}

/* ===== 待办工单 ===== */
.section {
  padding: 0 32rpx;
  margin-top: 48rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 8rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-text-primary);
}

.section-more {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

/* 工单任务卡片 */
.task-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.task-card {
  padding: 24rpx;
}

.task-card-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.task-card-left {
  display: flex;
  flex-direction: column;
}

.task-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text-primary);
}

.task-time {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: var(--color-text-placeholder);
  flex-shrink: 0;
}

.icon-xs {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

.task-desc {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.task-card-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid var(--color-border-light);
}

.task-user {
  font-size: 20rpx;
  color: var(--color-text-placeholder);
}

/* 空状态卡片 */
.empty-card {
  padding: 64rpx 0;
  text-align: center;
  color: var(--color-text-secondary);
  font-size: 28rpx;
}
