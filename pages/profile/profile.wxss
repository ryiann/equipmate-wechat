/* pages/profile/profile.wxss */

.page-profile {
  min-height: 100vh;
  background: var(--color-bg);
  padding-bottom: 40rpx;
}

/* 头部 */
.profile-header {
  background: #ffffff;
  padding: 80rpx 48rpx 48rpx;
  box-shadow: var(--shadow-sm);
}

.profile-info {
  display: flex;
  align-items: center;
  gap: 28rpx;
}

.avatar-wrap {
  flex-shrink: 0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #e5e7eb;
  overflow: hidden;
}

.avatar-default {
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-icon {
  width: 60rpx;
  height: 60rpx;
}

.profile-text {
  flex: 1;
}

.profile-name {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--color-text-primary);
}

.login-prompt {
  padding: 0;
}

.profile-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 8rpx;
}

.profile-phone {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.role-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  background: var(--color-primary-50);
  color: var(--color-primary);
  font-size: 20rpx;
  font-weight: 500;
  border-radius: 6rpx;
}

/* 统计 */
.stats-row {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  background: #ffffff;
  padding: 28rpx 0;
  margin-bottom: 24rpx;
  border-top: 1rpx solid var(--color-border-light);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-border {
  border-right: 1rpx solid var(--color-border);
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--color-text-primary);
}

.stat-label {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  margin-top: 8rpx;
}

/* 菜单 */
.menu-group {
  background: #ffffff;
  margin-bottom: 24rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid var(--color-border-light);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: var(--color-bg);
}

.menu-icon-wrap {
  width: 56rpx;
  display: flex;
  justify-content: center;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
}

.menu-label {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #374151;
}

.menu-arrow {
  width: 28rpx;
  height: 28rpx;
}

/* 退出登录 */
.logout-wrap {
  padding: 0 32rpx;
}

.logout-btn {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 28rpx 0;
  background: #ffffff;
  color: var(--color-danger);
  font-size: 28rpx;
  font-weight: 500;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--color-border);
}
