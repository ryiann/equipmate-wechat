/* pages/login/login.wxss */

.page-login {
  min-height: 100vh;
  background: var(--color-bg);
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 48rpx 40rpx 96rpx;
  position: relative;
}

/* 关闭按钮 */
.close-btn {
  position: absolute;
  top: 48rpx;
  right: 48rpx;
  width: 64rpx;
  height: 64rpx;
  background: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
  z-index: 10;
}

.close-icon {
  width: 40rpx;
  height: 40rpx;
}

/* Logo */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.logo-box {
  width: 128rpx;
  height: 128rpx;
  background: var(--color-primary);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.3);
}

.logo-text {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: 700;
}

.app-title {
  margin-top: 28rpx;
  font-size: 44rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  letter-spacing: 1rpx;
}

.app-subtitle {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

/* 表单卡片 */
.form-card {
  padding: 48rpx 36rpx;
}

/* 身份选择 */
.role-section {
  margin-bottom: 40rpx;
}

.role-label {
  display: block;
  text-align: center;
  font-size: 22rpx;
  color: var(--color-text-secondary);
  margin-bottom: 20rpx;
}

.role-selector {
  display: flex;
  gap: 16rpx;
  background: var(--color-bg);
  padding: 8rpx;
  border-radius: 20rpx;
}

.role-option {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx 0;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: var(--color-text-secondary);
  transition: all 0.2s;
}

.role-option.active {
  background: #ffffff;
  color: var(--color-primary);
  box-shadow: var(--shadow-sm);
}

.role-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 表单 */
.form-group {
  margin-bottom: 48rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 20rpx;
}

.input-wrap {
  position: relative;
  display: flex;
  align-items: center;
}

.input-icon {
  position: absolute;
  left: 24rpx;
  width: 36rpx;
  height: 36rpx;
  z-index: 1;
}

.form-input {
  width: 100%;
  padding: 30rpx 30rpx 30rpx 80rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  color: var(--color-text-primary);
  background: #f9fafb;
  box-shadow: inset 0 0 0 1rpx #d1d5db;
  height: 96rpx;
  line-height: 96rpx;
}

.form-input:focus {
  box-shadow: inset 0 0 0 2rpx var(--color-primary);
}

.input-placeholder {
  color: var(--color-text-placeholder);
}

/* 验证码行 */
.code-row {
  display: flex;
  gap: 20rpx;
  align-items: stretch;
}

.code-btn {
  white-space: nowrap;
  padding: 0 32rpx;
  background: var(--color-primary-50);
  color: var(--color-primary);
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 180rpx;
}

.code-btn.disabled {
  background: #f3f4f6;
  color: var(--color-text-placeholder);
}

/* 登录按钮 */
.login-btn {
  display: flex;
  width: 100%;
  justify-content: center;
  padding: 28rpx 0;
  background: var(--color-primary);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 20rpx;
  margin-top: 16rpx;
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  margin: 48rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: #e5e7eb;
}

.divider-text {
  padding: 0 16rpx;
  font-size: 24rpx;
  color: var(--color-text-secondary);
  background: #ffffff;
}

/* 微信登录按钮 */
.wechat-btn {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 24rpx 0;
  background: var(--color-wechat) !important;
  color: #ffffff !important;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 20rpx;
  line-height: 1.5;
}

.wechat-btn::after {
  border: none;
}

.wechat-icon {
  width: 36rpx;
  height: 36rpx;
}
