/* pages/repair-create/repair-create.wxss */
.page-form { min-height: 100vh; background: var(--color-bg); padding: 24rpx; padding-bottom: 160rpx; }
.form-card { padding: 16rpx 28rpx; }
.form-item { padding: 20rpx 0; border-bottom: 1rpx solid var(--color-border-light); }
.form-item:last-child { border-bottom: none; }
.form-label { display: block; font-size: 26rpx; font-weight: 500; color: #374151; margin-bottom: 12rpx; }
.form-label.required::before { content: '*'; color: var(--color-danger); margin-right: 4rpx; }
.form-textarea { width: 100%; min-height: 200rpx; padding: 16rpx 0; font-size: 28rpx; color: var(--color-text-primary); border: none; }
.char-count { display: block; text-align: right; font-size: 22rpx; color: var(--color-text-placeholder); margin-top: 8rpx; }
.form-picker { display: flex; align-items: center; justify-content: space-between; padding: 16rpx 0; }
.form-picker text { font-size: 28rpx; color: var(--color-text-primary); }
.form-picker .placeholder { color: var(--color-text-placeholder); }
.picker-arrow { width: 28rpx; height: 28rpx; }

/* 故障等级选择器 */
.level-selector { display: flex; gap: 16rpx; flex-wrap: wrap; margin-top: 8rpx; }
.level-option { padding: 14rpx 28rpx; border-radius: var(--radius-full); font-size: 24rpx; font-weight: 500; background: #f3f4f6; color: var(--color-text-secondary); border: 2rpx solid transparent; }
.level-option.active { font-weight: 600; }
.level-option.active.level-urgent { background: var(--color-danger-50); color: var(--color-danger); border-color: #fecaca; }
.level-option.active.level-high { background: var(--color-warning-50); color: var(--color-warning); border-color: #fed7aa; }
.level-option.active.level-normal { background: var(--color-primary-50); color: var(--color-primary); border-color: #bfdbfe; }
.level-option.active.level-low { background: #f3f4f6; color: var(--color-text-secondary); border-color: #d1d5db; }

.image-upload-grid { display: flex; flex-wrap: wrap; gap: 16rpx; margin-top: 12rpx; }
.upload-item { position: relative; width: 180rpx; height: 180rpx; border-radius: 16rpx; overflow: hidden; }
.upload-preview { width: 100%; height: 100%; }
.upload-delete { position: absolute; top: 4rpx; right: 4rpx; width: 40rpx; height: 40rpx; background: rgba(0,0,0,0.5); color: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 28rpx; }
.upload-add { width: 180rpx; height: 180rpx; background: #f3f4f6; border-radius: 16rpx; display: flex; flex-direction: column; align-items: center; justify-content: center; gap: 8rpx; color: var(--color-text-placeholder); font-size: 22rpx; border: 2rpx dashed #d1d5db; }
.upload-add-icon { width: 48rpx; height: 48rpx; }

.submit-wrap { position: fixed; bottom: 0; left: 0; right: 0; padding: 24rpx 32rpx; background: #fff; border-top: 1rpx solid var(--color-border); padding-bottom: calc(24rpx + env(safe-area-inset-bottom)); }
.submit-btn { display: flex; width: 100%; justify-content: center; padding: 24rpx 0; background: var(--color-primary); color: #fff; font-size: 30rpx; font-weight: 600; border-radius: 20rpx; }
