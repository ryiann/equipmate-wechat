/* pages/equipment-form/equipment-form.wxss */

.page-form {
  min-height: 100vh;
  background: var(--color-bg);
  padding: 24rpx;
  padding-bottom: 180rpx;
}

/* 卡片区块 */
.section-card {
  background: #ffffff;
  border-radius: var(--radius-xl, 24rpx);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-sm);
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f3f4f6;
  margin-bottom: 12rpx;
}

/* 表单项 */
.form-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--color-border-light);
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
}

.form-label.required::before {
  content: '*';
  color: var(--color-danger);
  margin-right: 6rpx;
}

/* 输入框 */
.form-input {
  width: 100%;
  padding: 24rpx 24rpx;
  font-size: 28rpx;
  color: var(--color-text-primary);
  background: #f9fafb;
  border-radius: 16rpx;
  border: 2rpx solid #e5e7eb;
  height: 92rpx;
  line-height: 92rpx;
}

.form-input:focus {
  border-color: var(--color-primary);
  background: #ffffff;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: var(--color-text-primary);
  background: #f9fafb;
  border-radius: 16rpx;
  border: 2rpx solid #e5e7eb;
}

/* 选择器 */
.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  border: 2rpx solid #e5e7eb;
  min-height: 92rpx;
}

.form-picker text {
  font-size: 28rpx;
  color: var(--color-text-primary);
}

.form-picker .placeholder {
  color: var(--color-text-placeholder);
}

.picker-arrow {
  width: 28rpx;
  height: 28rpx;
  flex-shrink: 0;
}

/* 图片上传 */
.image-upload-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 16rpx;
}

.upload-item {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.upload-preview {
  width: 100%;
  height: 100%;
}

.upload-delete {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 44rpx;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.upload-add {
  width: 180rpx;
  height: 180rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  color: var(--color-text-placeholder);
  font-size: 24rpx;
  border: 2rpx dashed #d1d5db;
}

.upload-add-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 底部提交 */
.submit-wrap {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid var(--color-border);
}

.submit-btn {
  display: flex;
  width: 100%;
  justify-content: center;
  padding: 28rpx 0;
  background: var(--color-primary);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 20rpx;
}
